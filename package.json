{
  "name": "xotheme",
  "version": "1.0.0",
  "description": "XOstack Zola SSG Theme",
  "main": "index.js",
  "devDependencies": {
    "@fontsource/atkinson-hyperlegible": "^5.2.6",
    "@fontsource/merriweather": "^5.2.9",
    "@fontsource/victor-mono": "^5.2.6",
    "sass": "^1.89.2"
  },
  "scripts": {
    "copy:fonts": "mkdir -p static/fonts && cp -r node_modules/@fontsource/atkinson-hyperlegible/files/*-400-normal.* node_modules/@fontsource/atkinson-hyperlegible/files/*-700-normal.* node_modules/@fontsource/victor-mono/files/*-400-normal.* node_modules/@fontsource/victor-mono/files/*-400-italic.* node_modules/@fontsource/merriweather/files/*-400-normal.* node_modules/@fontsource/merriweather/files/*-700-normal.* node_modules/@fontsource/merriweather/files/*-400-italic.* static/fonts/",
    "build:css": "sass sass/main.scss static/css/main.css --style=compressed",
    "build": "npm run copy:fonts && npm run build:css && zola build",
    "dev": "zola serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xostack/xotheme.git"
  },
  "keywords": [
    "zola",
    "theme",
    "static site generator",
    "XOstack"
  ],
  "author": "Harshad Sharma <harshad@sharma.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xostack/xotheme/issues"
  },
  "homepage": "https://github.com/xostack/xotheme#readme"
}
